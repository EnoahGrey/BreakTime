<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreakTime.MainPage" x:Name="ftmMain">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30">

            <Label x:Name="lblDisplay" HorizontalOptions="Center" Padding="0,75,0,75" FontSize="Title" />
            <Button x:Name="btnTake5" Text="Take 5" Clicked="BtnTake5_OnClicked" />
            <Button x:Name="btnTake10" Text="Take 10" Clicked="BtnTake10_OnClicked" />
            <Button x:Name="btnTake15" Text="Take 15" Clicked="BtnTake15_OnClicked" />
            <Button x:Name="btnStop" Text="Stop Timer" Clicked="BtnStop_OnClicked" />
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
